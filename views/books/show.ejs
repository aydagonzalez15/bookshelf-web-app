

<%- include('../partials/header') %>
<h2>Book Details</h2>

<main class="details-grid-container">
  <div id="grid-item1" class="grid-item grid-item-1">
    <img id="grid-item1" style="width: 80%;" class="grid-items book-thumbnail" src="<%= book.thumbnail %>">
  </div>
  <div class="grid-item grid-item-2">
    <p><h3> <%= book.title %></h3> </p>
    <p> by <%= book.authors %></p>
    <p> <%= book.categories %> </p>
  </div>
  <div class="grid-item grid-item-3">
    <h4>Overview:</h4>
    <p> <%= book.description %> </p>
  </div>
  <div class="grid-item grid-item-4">
    <br><br>
    <h2 style="font-style:italic">What do you think?</h2>


    <form action="/books/<%= book._id %>/comments/new" method="'GET">
      <button class="btn-review-saved-pg"> Write a review </button>
    </form>

  </div>
</main>

<div class="comment-container">
<div class="usernmae-comment-sect">USERNMAE and PICTURE</div>
<div class="comment-section comment-blurb">
  <% if (book.comment.length) { %>
        <% book.comment.forEach(function(c) { %>
            <%= c.createdAt.toLocaleDateString() %>
            <%= c.content %>

            <form action="/comments/<%=c._id%>/edit" method="'GET">
              <button class="btn-edit-review-pg"> <span class="material-symbols-outlined">
                edit
                </span> </button>
            </form>
            <form action="/comments/<%= c._id %>?_method=DELETE" method="POST">
              <button class="btn-delete-review-pg" type="Submit"> <span class="material-symbols-outlined">
                delete_forever
                </span> </button>
              </form> 
        <% }); %>

  <% } else { %>
    <h5>No comments Yet</h5>
  <% } %>
</div>
</div>



 
  





<%- include('../partials/footer') %>