<%- include('../partials/header') %>

  <h2><%= title %></h2>

  <main class="comments-page-container">
    <div>
      <p><h3><%= book.title %>> Review</h3></p>
    </div>
    <div class="comment-book-thumbnail-div">
      <img id="grid-item1" style="width: 14%;" class="grid-items comment-book-thumbnail" src="<%= book.thumbnail %>"> <br>
      <strong>
        <%= book.title %>
      </strong> <br> by <%= book.authors %>
    </div>
    <div class="comment-box-new-page">
      Polish Your Thoughts?
      <form action="/comments/<%= comment._id %>?_method=PUT" method="POST">
        <textarea name="content" rows="20" cols="60"><%= comment.content %></textarea>
        <br>
        <button type="Submit" value=""> Post Edit</button>
      </form>
      <br>
  
    </div>
  </main>





  <%- include('../partials/footer') %>