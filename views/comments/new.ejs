



<% if (comment.length) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Comments</th>
          <th>Edit</th>
  
        </tr>
      </thead>
      <tbody>
        <% comment.forEach(function(c) { %>
          <tr>
            <td><%= c.createdAt.toLocaleDateString() %></td>
            <td><%= c.content %></td>
            <td> <a href="/comments/<%= c._id %>/edit"> Edit Comment</a></td>
  
  
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <h5>No comments Yet</h5>
  <% } %>
  